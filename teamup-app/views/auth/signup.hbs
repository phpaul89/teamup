<form id="form" action="/signup" method="POST">
  <h1>Sign up page</h1>
  <label for="username">Username: </label>
  <input type="text" name="username" placeholder="Add username" required><br><br>
  <label for="email">E-Mail: </label>
  <input type="email" name="email" placeholder="Add E-Mail" required><br><br>
  <label for="password">Password: </label>
  <input type="password" name="password" placeholder="Add password" required><br><br>
  <button type="submit">Sign up</button>
  {{#if message}}
  <div id="error-message">
    {{message}}
  </div>
  {{/if}}
</form>

<!-- 'required' attribute = HTML 5 feature, user has to fill something in or cannot process further -->