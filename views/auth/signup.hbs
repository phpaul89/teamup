<div id="full" class="bg-white">
  <div id="navigation">
    <nav class="nav-bar">
      <ul>
        <li><a href="/">TeamUp</a></li>
        <li><a href="/login">Login</a></li>
      </ul>
    </nav>
  </div>
  <div id="signup-form">
    <form id="form" action="/signup" method="POST">
      <h1>Sign up</h1><br><br>
      <label for="username">Username: </label>
      <input type="text" name="username" placeholder="Add username" required><br>
      <label for="email">E-Mail: </label>
      <input type="email" name="email" placeholder="Add E-Mail" required><br>
      <label for="password">Password: </label>
      <input type="password" name="password" placeholder="Add password" required><br>
      <button type="submit">Sign up</button>
      {{#if message}}
      <div id="error-message">
        {{message}}
      </div>
      {{/if}}
    </form>
  </div>

</div>



<!-- 'required' attribute = HTML 5 feature, user has to fill something in or cannot process further -->